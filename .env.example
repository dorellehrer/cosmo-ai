# ── Cosmo AI — Environment Variables ──────────
# Copy this file to .env.local and fill in your values.
# Required vars are marked [REQUIRED], others are optional.

# ── Database [REQUIRED] ──────────────────────
# PostgreSQL connection string (AWS RDS or local)
DATABASE_URL="postgresql://user:password@localhost:5432/cosmo"
DIRECT_URL="postgresql://user:password@localhost:5432/cosmo"

# ── NextAuth [REQUIRED] ─────────────────────
# Generate secret: openssl rand -base64 32
NEXTAUTH_SECRET=your-secret-here
NEXTAUTH_URL=http://localhost:3000

# ── OpenAI [REQUIRED] ────────────────────────
OPENAI_API_KEY=sk-your-key-here

# ── OAuth Providers (optional — for social login) ──
# Google: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# GitHub: https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ── Stripe Billing (optional — for Pro tier) ──
# https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=
STRIPE_PRO_PRICE_ID=
STRIPE_WEBHOOK_SECRET=
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ── Agent Platform (optional — for personal AI agents) ──
AWS_REGION=eu-north-1
AWS_ECS_CLUSTER_ARN=
AWS_SUBNETS=
AWS_SECURITY_GROUPS=
AWS_CONTAINER_IMAGE=
AWS_EXECUTION_ROLE_ARN=
AWS_TASK_ROLE_ARN=
AWS_ACCOUNT_ID=
AWS_LOG_GROUP=
