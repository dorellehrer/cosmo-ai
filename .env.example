# ── Nova AI — Environment Variables ──────────
# Copy this file to .env.local and fill in your values.
# Required vars are marked [REQUIRED], others are optional.

# ── Database [REQUIRED] ──────────────────────
# PostgreSQL connection string (AWS RDS or local)
DATABASE_URL="postgresql://user:password@localhost:5432/nova"
DIRECT_URL="postgresql://user:password@localhost:5432/nova"

# ── NextAuth [REQUIRED] ─────────────────────
# Generate secret: openssl rand -base64 32
NEXTAUTH_SECRET=your-secret-here
NEXTAUTH_URL=http://localhost:3000

# ── OpenAI [REQUIRED] ────────────────────────
OPENAI_API_KEY=sk-your-key-here

# ── Anthropic (optional — for Claude models) ──
# https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=

# ── Web Search (optional — improves search quality) ──
# https://brave.com/search/api/
BRAVE_SEARCH_API_KEY=

# ── OAuth Providers (optional — for social login) ──
# Google: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# GitHub: https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# ── Stripe Billing (optional — for Pro tier) ──
# https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=
STRIPE_PRO_PRICE_ID=
STRIPE_WEBHOOK_SECRET=
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ── Routines (optional — for automated task scheduling) ──
# Secret for the cron endpoint (generate: openssl rand -hex 32)
CRON_SECRET=

# ── Agent Platform (optional — for personal AI agents) ──
AWS_REGION=eu-north-1
AWS_ECS_CLUSTER_ARN=
AWS_SUBNETS=
AWS_SECURITY_GROUPS=
AWS_CONTAINER_IMAGE=
AWS_EXECUTION_ROLE_ARN=
AWS_TASK_ROLE_ARN=
AWS_ACCOUNT_ID=
AWS_LOG_GROUP=

# ── Integrations OAuth (optional — for third-party integrations) ──
# Token encryption key (min 32 chars)
INTEGRATION_ENCRYPTION_KEY=
# Google (integrations): https://console.cloud.google.com/apis/credentials
GOOGLE_INTEGRATION_CLIENT_ID=
GOOGLE_INTEGRATION_CLIENT_SECRET=
# Spotify: https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=
# Notion: https://www.notion.so/my-integrations
NOTION_CLIENT_ID=
NOTION_CLIENT_SECRET=
# Slack: https://api.slack.com/apps
SLACK_CLIENT_ID=
SLACK_CLIENT_SECRET=
# Philips Hue: https://developers.meethue.com
HUE_CLIENT_ID=
HUE_CLIENT_SECRET=
# Sonos: https://developer.sonos.com
SONOS_CLIENT_ID=
SONOS_CLIENT_SECRET=
